<?xml version="1.0"?>

<system name="xserializer">
	<root class="XSERIALIZER" creation="make"/>
	<option name="console_application" value="true"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="internal"/>
		<option name="finalize" value="false"/>
	</option>

	<cluster name="ap_tester" location="."/><!-- test cases -->
	<cluster name="ap_testgen" location="TESTGEN"/><!-- generated test classes -->
	<cluster name="elks_kernel_overrides" location="${ISE_LIBRARY}/library/base/capture_replay/elks_overrides/kernel" >
		<option name="read_only" value="False" />
	</cluster>

	<option name="override_cluster" value="elks_kernel_overrides" /> <!-- overrides for modified elks library. -->


	<cluster name="base" location = "../../Src/library/base/capture_replay/own_classes" >
		<option name="read_only" value="False" />
	</cluster >
	 
	<mount location="${GOBO}/library/test/library.xace"/>
	<mount location="${GOBO}/library/argument/library.xace"/>
	<mount location="${GOBO}/library/pattern/library.xace"/>
	<mount location="${GOBO}/library/structure/library.xace"/>
	<mount location="${GOBO}/library/utility/library.xace"/>
	<mount location="${GOBO}/library/string/library.xace"/>
	<mount location="${GOBO}/library/kernel/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
